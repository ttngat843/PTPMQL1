@model IEnumerable<Demo_MVC.Models.Entities.Person>

@{
    ViewData["Title"] = "Danh sách Person";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>

    <!-- Nút mở form upload -->
    <button class="btn btn-success" onclick="document.getElementById('uploadForm').classList.toggle('d-none')">
        Upload Excel
    </button>
</div>

<!-- Form Upload Excel -->
<div id="uploadForm" class="card p-3 d-none" style="max-width: 400px;">
    <form asp-action="Upload" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label class="form-label">Chọn file Excel (.xls, .xlsx)</label>
            <input type="file" name="file" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Tải lên</button>
    </form>
</div>

<br />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Birth Year</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.BirthYear</td>
                    <td>@item.Address</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PersonId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PersonId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PersonId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Chưa có dữ liệu để hiển thị</td>
            </tr>
        }
    </tbody>
</table>
